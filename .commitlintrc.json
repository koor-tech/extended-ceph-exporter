{
    "extends": ["@commitlint/config-conventional"],
    "rules": {
        "type-enum": [
            2,
            "always",
            [
                "build",
                "chore",
                "ci",
                "collector",
                "core",
                "docs",
                "feat",
                "fix",
                "grafana",
                "helm",
                "monitoring",
                "perf",
                "refactor",
                "revert",
                "style",
                "test"
            ]
        ]
    }
}
